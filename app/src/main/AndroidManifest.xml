<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Izin Kamera & Lokasi -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MAP_MID_TERM">

        <!-- ========= USER SIDE ========= -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.MainActivity"
            android:exported="false"
            android:label="Beranda" />

        <activity
            android:name=".activities.CameraActivity"
            android:exported="false"
            android:label="@string/title_activity_camera"
            android:theme="@style/Theme.MAP_MID_TERM" />

        <!-- ========= ADMIN SIDE ========= -->
        <activity
            android:name=".activities.AdminActivity"
            android:exported="false"
            android:label="Dashboard Admin"
            android:theme="@style/Theme.MAP_MID_TERM.Admin" />

        <activity
            android:name=".activities.MemberListActivity"
            android:exported="false"
            android:label="Data Anggota"
            android:theme="@style/Theme.MAP_MID_TERM.Admin" />

        <activity
            android:name=".activities.LoanListActivity"
            android:exported="false"
            android:label="Data Pinjaman"
            android:theme="@style/Theme.MAP_MID_TERM.Admin" />

        <activity
            android:name=".activities.TransactionListActivity"
            android:exported="false"
            android:label="Data Transaksi"
            android:theme="@style/Theme.MAP_MID_TERM.Admin" />

        <activity
            android:name=".activities.AdminReportActivity"
            android:exported="false"
            android:label="Laporan Koperasi"
            android:theme="@style/Theme.MAP_MID_TERM.Admin" />

        <activity
            android:name=".activities.AdminNotificationActivity"
            android:exported="false"
            android:label="Notifikasi Pengajuan"
            android:theme="@style/Theme.MAP_MID_TERM.Admin" />

        <activity
            android:name=".activities.AdminLoanDetailActivity"
            android:exported="false"
            android:label="Detail Pinjaman"
            android:theme="@style/Theme.MAP_MID_TERM.Admin" />

        <activity
            android:name=".activities.CashManagementActivity"
            android:exported="false"
            android:label="Kas Koperasi"
            android:theme="@style/Theme.MAP_MID_TERM.Admin" />
        <activity
            android:name=".activities.AdminNotificationDetailActivity"
            android:exported="false"
            android:label="Detail Notifikasi"
            android:theme="@style/Theme.MAP_MID_TERM.Admin" />

    </application>
</manifest>
