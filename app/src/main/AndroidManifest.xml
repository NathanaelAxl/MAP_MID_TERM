        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MAP_MID_TERM">
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:exported="false" />
        <activity
            android:name=".activities.CameraActivity"
            android:exported="false"
            android:label="@string/title_activity_camera"
            android:theme="@style/Theme.MAP_MID_TERM" />
        <activity android:name=".activities.AdminActivity" />
        <activity
            android:name=".activities.MemberListActivity"
            android:exported="false" />
        <activity
            android:name=".activities.LoanListActivity"
            android:exported="false"
            android:label="Data Pinjaman"
            android:theme="@style/Theme.MAP_MID_TERM" />
        <activity
            android:name=".activities.TransactionListActivity"
            android:exported="false"
            android:label="Data Transaksi"
            android:theme="@style/Theme.MAP_MID_TERM" />
        <activity android:name=".activities.AdminReportActivity"
            android:exported="false"
            android:label="Laporan Koperasi" />
        <activity android:name=".activities.AdminNotificationActivity" />
        <activity android:name=".activities.AdminLoanDetailActivity" />
        <activity android:name=".activities.CashManagementActivity" />
        <activity android:name=".activities.AdminNotificationActivity" />
        <activity android:name=".activities.AdminLoanDetailActivity" />
        <activity android:name=".activities.AdminLoanDetailActivity" />

    </application>
</manifest>
