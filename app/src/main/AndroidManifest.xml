<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.MAP_MID_TERM">

        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.LoginActivity"
            android:exported="false" />

        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false"
            android:label="Registrasi Anggota" />

        <activity
            android:name=".activities.MainActivity"
            android:exported="false"
            android:label="Beranda" />

        <activity android:name=".activities.CameraActivity" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name=".activities.AdminActivity"
            android:exported="false"
            android:label="Dashboard Admin"
            android:theme="@style/Theme.MAP_MID_TERM.Admin" />

        <activity
            android:name=".activities.MemberListActivity"
            android:exported="false"
            android:label="Data Anggota"
            android:theme="@style/Theme.MAP_MID_TERM.Admin" />

        <activity
            android:name=".activities.LoanListActivity"
            android:exported="false"
            android:label="Data Pinjaman"
            android:theme="@style/Theme.MAP_MID_TERM.Admin" />

        <activity
            android:name=".activities.TransactionListActivity"
            android:exported="false"
            android:label="Data Transaksi"
            android:theme="@style/Theme.MAP_MID_TERM.Admin" />

        <activity
            android:name=".activities.AdminReportActivity"
            android:exported="false"
            android:label="Laporan Koperasi"
            android:theme="@style/Theme.MAP_MID_TERM.Admin" />

        <activity
            android:name=".activities.AdminNotificationActivity"
            android:exported="false"
            android:label="Notifikasi Pengajuan"
            android:theme="@style/Theme.MAP_MID_TERM.Admin" />

        <activity
            android:name=".activities.AdminLoanDetailActivity"
            android:exported="false"
            android:label="Detail Pinjaman"
            android:theme="@style/Theme.MAP_MID_TERM.Admin" />

        <activity
            android:name=".activities.CashManagementActivity"
            android:exported="false"
            android:label="Kas Koperasi"
            android:theme="@style/Theme.MAP_MID_TERM.Admin" />

        <activity
            android:name=".activities.AdminNotificationDetailActivity"
            android:exported="false"
            android:label="Detail Notifikasi"
            android:theme="@style/Theme.MAP_MID_TERM.Admin" />

        <activity android:name=".activities.AdminTransactionActivity" />

        <activity
            android:name=".activities.AdminAnnouncementActivity"
            android:label="Buat Pengumuman"
            android:windowSoftInputMode="adjustResize"/>

    </application>
</manifest>