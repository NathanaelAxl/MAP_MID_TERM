<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvLoanStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APPROVED"
            android:textSize="10sp"
            android:textStyle="bold"
            android:background="#E3F2FD"
            android:textColor="#1976D2"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
            android:id="@+id/btnDeleteLoan"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#D32F2F"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvBorrowerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nama Peminjam"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnDeleteLoan"
            app:layout_constraintTop_toBottomOf="@id/tvLoanStatus"/>

        <TextView
            android:id="@+id/tvLoanAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 5.000.000"
            android:textSize="14sp"
            android:textColor="#2E7D32"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvBorrowerName"/>

        <TextView
            android:id="@+id/tvLoanTenor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â€¢ 12 Bulan"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/tvLoanAmount"
            app:layout_constraintTop_toTopOf="@id/tvLoanAmount"/>

        <ProgressBar
            android:id="@+id/pbLoanProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:progress="50"
            android:max="100"
            android:progressTint="#4CAF50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLoanAmount"/>

        <TextView
            android:id="@+id/tvProgressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terbayar: 50%"
            android:textSize="10sp"
            android:textColor="#9E9E9E"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pbLoanProgress"/>

        <LinearLayout
            android:id="@+id/layoutActionButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pbLoanProgress">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReject"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Tolak"
                android:textSize="10sp"
                app:icon="@drawable/ic_close_24"
                android:layout_marginEnd="8dp"
                app:backgroundTint="#FFEBEE"
                android:textColor="#C62828"
                app:iconTint="#C62828"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnApprove"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Terima"
                android:textSize="10sp"
                app:icon="@drawable/ic_check"
                app:backgroundTint="#E8F5E9"
                android:textColor="#2E7D32"
                app:iconTint="#2E7D32"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>