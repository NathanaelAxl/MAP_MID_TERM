<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Judul halaman -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status Pinjaman Aktif"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- Card informasi pinjaman -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvLoanStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aktif"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#2E7D32"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Pinjaman"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLoanId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LN-09876-ZYX"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah Pinjaman"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLoanAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 10.000.000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tenor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLoanTenor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 Bulan"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sisa Waktu"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLoanRemaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Bulan" />
        </LinearLayout>

        <!-- Tombol kembali -->
        <Button
            android:id="@+id/btnBackToHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kembali ke Beranda"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
