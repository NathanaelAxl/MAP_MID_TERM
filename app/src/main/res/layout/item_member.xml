<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Icon Profil -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_profile"
            app:tint="@color/black"
            tools:src="@android:drawable/ic_menu_my_calendar"/>
        <!-- Note: Ganti src dengan icon profile yang kamu punya jika ada -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <!-- ID PENTING: tv_member_name -->
            <TextView
                android:id="@+id/tv_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Anggota"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <!-- ID PENTING: tv_member_email -->
            <TextView
                android:id="@+id/tv_member_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email@contoh.com"
                android:textSize="14sp"
                android:textColor="#757575"/>

            <!-- ID PENTING: tv_member_phone -->
            <TextView
                android:id="@+id/tv_member_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0812..."
                android:textSize="12sp"
                android:textColor="#757575"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>