<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivTransactionIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/stat_sys_download"
            app:tint="#4CAF50"
            android:background="@drawable/circle_bg_green_light"
            android:padding="8dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <LinearLayout
            android:id="@+id/layoutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/ivTransactionIcon"
            android:layout_toStartOf="@id/tvTransactionAmount"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:layout_alignTop="@id/ivTransactionIcon">

            <TextView
                android:id="@+id/tvTransactionDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pemasukan"
                android:textColor="#212121"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvTransactionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22 Dec 2025"
                android:textColor="#757575"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>

            <ImageView
                android:id="@+id/ivProofImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:background="#EEEEEE"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvTransactionAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Rp100.000"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/ivTransactionIcon"
            android:layout_marginTop="4dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>