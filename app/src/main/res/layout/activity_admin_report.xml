<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bon"
    tools:context=".activities.AdminReportActivity">

    <include
        layout="@layout/appbar_toolbar"
        android:id="@+id/topAppBar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <!-- Card: Total Simpanan -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTotalSimpananReport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp0"
                        android:textColor="@color/green"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Simpanan"
                        android:textSize="14sp"
                        android:textColor="@color/sec" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card: Total Pinjaman -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTotalPinjamanReport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp0"
                        android:textColor="@android:color/holo_red_dark"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Pinjaman"
                        android:textSize="14sp"
                        android:textColor="@color/sec" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card: Saldo Kas -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvSaldoKasReport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp0"
                        android:textColor="@color/green"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saldo Kas"
                        android:textSize="14sp"
                        android:textColor="@color/sec" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card: Laba Bersih -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvLabaBersihReport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp0"
                        android:textColor="@color/sec"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Laba Bersih"
                        android:textSize="14sp"
                        android:textColor="@color/sec" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tombol Ekspor -->
            <Button
                android:id="@+id/btnExportReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“„ Ekspor Laporan"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/green"
                android:padding="12dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                app:cornerRadius="50dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
