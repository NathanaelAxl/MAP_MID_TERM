<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bon">

    <!-- Toolbar -->
    <include layout="@layout/appbar_toolbar" android:id="@+id/topAppBar" />

    <!-- Konten -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            android:backgroundTint="@android:color/white"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvLoanId"
                    android:text="ID Pinjaman: L001"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvMemberId"
                    android:text="Anggota: M001"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvAmount"
                    android:text="Jumlah: Rp 1000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:text="Status: Sedang Diproses"
                    android:textColor="@color/orange_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnAccept"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/teal_700"
                android:layout_marginEnd="10dp" />

            <Button
                android:id="@+id/btnDecline"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Decline"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/red" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
