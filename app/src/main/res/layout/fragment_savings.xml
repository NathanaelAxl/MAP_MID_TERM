<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F9F9F9">

    <TextView
        android:id="@+id/tvTitleSavings"
        android:text="Simpanan Anggota"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#00796B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvSaldoPokok"
        android:text="Simpanan Pokok: Rp 500.000"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvSaldoWajib"
        android:text="Simpanan Wajib: Rp 200.000"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvSaldoSukarela"
        android:text="Simpanan Sukarela: Rp 150.000"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnTambahSimpanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Simpanan"
        android:backgroundTint="#00796B"
        android:textColor="#FFFFFF" />

</LinearLayout>
