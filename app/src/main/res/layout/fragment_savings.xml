<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bon">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tvTitleSavings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simpanan Anggota"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/prim"
            android:layout_marginBottom="20dp" />

        <!-- Card Total Simpanan -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Simpanan"
                    android:textSize="16sp"
                    android:textColor="#757575"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/tvTotalSaldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 850.000"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/prim"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Rincian Simpanan -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rincian Simpanan"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="12dp"/>

        <!-- Simpanan Pokok -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:elevation="2dp"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_wallet"
                    android:tint="@color/prim"
                    android:layout_marginEnd="12dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvSaldoPokok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Simpanan Pokok"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/tvValuePokok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 500.000"
                        android:textSize="14sp"
                        android:textColor="#757575"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Simpanan Wajib -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:elevation="2dp"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_payment"
                    android:tint="@color/prim"
                    android:layout_marginEnd="12dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvSaldoWajib"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Simpanan Wajib"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/tvValueWajib"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 200.000"
                        android:textSize="14sp"
                        android:textColor="#757575"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Simpanan Sukarela -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:elevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_savings"
                    android:tint="@color/prim"
                    android:layout_marginEnd="12dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvSaldoSukarela"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Simpanan Sukarela"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/tvValueSukarela"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 150.000"
                        android:textSize="14sp"
                        android:textColor="#757575"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tombol Tambah -->
        <Button
            android:id="@+id/btnTambahSimpanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tambah Simpanan"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/prim"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"/>
    </LinearLayout>
</ScrollView>
