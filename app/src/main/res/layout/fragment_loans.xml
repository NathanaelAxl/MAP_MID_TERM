<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bon">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tvTitleLoans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pinjaman Anggota"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/prim"
            android:layout_marginBottom="20dp" />

        <!-- Card Total Pinjaman -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Pinjaman"
                    android:textSize="16sp"
                    android:textColor="#757575"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/tvLoanAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 5.000.000"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/prim"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Rincian Pinjaman -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Pinjaman"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="12dp"/>

        <!-- Tenor -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:elevation="2dp"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_calendar"
                    android:tint="@color/prim"
                    android:layout_marginEnd="12dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTenor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tenor"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/tvTenorValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12 Bulan"
                        android:textSize="14sp"
                        android:textColor="#757575"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Cicilan -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:elevation="2dp"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_money"
                    android:tint="@color/prim"
                    android:layout_marginEnd="12dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCicilan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cicilan per Bulan"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/tvCicilanValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 450.000"
                        android:textSize="14sp"
                        android:textColor="#757575"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Status Pinjaman -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:elevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_status"
                    android:tint="@color/prim"
                    android:layout_marginEnd="12dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvStatusLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status Pinjaman"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/tvStatusValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aktif"
                        android:textSize="14sp"
                        android:textColor="@color/prim"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tombol Ajukan -->
        <Button
            android:id="@+id/btnAjukanPinjaman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajukan Pinjaman Baru"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/prim"
            android:layout_marginTop="24dp"
            android:elevation="4dp"/>
    </LinearLayout>
</ScrollView>
