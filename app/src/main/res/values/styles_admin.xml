<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ========== BASE THEME UNTUK ADMIN ========== -->
    <style name="Theme.MAP_MID_TERM.Admin" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Warna dasar -->
        <item name="colorPrimary">@color/prim</item>
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:colorBackground">@color/bon</item>

        <!-- Warna bar -->
        <item name="android:statusBarColor">@color/prim</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowBackground">@color/bon</item>

        <!-- Font (gunakan bawaan Android agar aman) -->
        <item name="android:fontFamily">sans-serif</item>

        <!-- Warna teks -->
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- ========== STYLE KARTU ADMIN ========== -->
    <style name="AdminCardStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="AdminCardInner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AdminCardText">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
